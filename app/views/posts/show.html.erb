<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
    <h6><%= @post.title %></h6>
    <hr>
  </header>

  <div id="content">
   <%= @post.content %>
  </div>

  <hr>

  <div id="share_box">
    <!-- Twitter -->
    <p>Share Insert Project Thumbnail 1 Here</p>
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @michellewebdev - &amp;url=<%=url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=800, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=800, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
    <!-- Google Plus -->
    <a onclick="javascript:window.open('http://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=800, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
  </div>

  <hr>

  <%= render 'disqus' %>

  </div>

